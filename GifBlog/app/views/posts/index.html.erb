<h1>Posts#index</h1>
<ul>
	<% @posts.each do |post| %>
	
		Post ID# :<%= post.id %>
		<h3>Post Title :<%= post.title %></h3>
		<%= image_tag(post.gif_url) %>
		<%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure"}  %>
		<%= link_to "SHOW POST", post_path(post) %>
<!-- 		<a href="http://localhost:3000/posts/">Add new post</a> -->

	<% end %>
</ul>

<p><a href="http://localhost:3000/posts/new">Add new post</a></p>